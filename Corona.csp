	.EQU	PASSWORD, $49
	.EQU	@, PASSWORD
	.CHAR 'get pwned', STR_LENGTH
	.EQU	WRITETO, $D00
	.EQU	@, $000	
	.EQU	KEYBOARD_STATUS, $000
	.EQU	KEYBOARD_DATA, $001
	LDA#	0
	LDF#	0
	LDX#	0
KEYPOLL:	INB	KEYBOARD_STATUS
	NOP
	JGE	KEYPOLL
	INB	KEYBOARD_DATA
	STA ! WRITETO
	ADF#	1
	LDX#	0
WORDCHECK:	LDC	PASSWORD
	CMA+ ! WRITETO-STR_LENGTH
	JNE	KEYPOLL
	AOC#	STR_LENGTH
	JEQ	DELETE_START
	JMP	WORDCHECK

DELETE_START:	LDX#	0
	LDA#	0
DELETE_LOOP:	STA+	0
	AOC#	50
	JGE	END
	JMP	DELETE_LOOP
END:	HLT
